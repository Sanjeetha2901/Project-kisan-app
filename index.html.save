<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Project Kisan AI Assistant</title>
  <style>
    body { font-family: Arial, sans-serif; padding: 2rem; background: #f5f5f5; }
    input, button { padding: 0.5rem; margin: 1rem 0; }
    #response { margin-top: 1rem; font-weight: bold; color: #006400; }
  </style>
</head>
<body>
  <h1>🌾 Project Kisan - AI Assistant</h1>
  <label for="query">Ask your farming question (Tamil/English):</label><br>
  <input type="text" id="query" size="50" placeholder="உங்கள் கேள்வியை இங்கே எழுதுங்கள்"><br>
  <button onclick="askGemini()">Ask Gemini</button>

  <div id="response"></div>

  <script>
    async function askGemini() {
      const query = document.getElementById("query").value;
      const responseDiv = document.getElementById("response");
      responseDiv.innerText = "Thinking... 🌱";

      try {
        const res = await fetch('/api/gemini', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ message: query })
        });

        const data = await res.json();
        responseDiv.innerText = data.reply;
      } catch (err) {
        responseDiv.innerText = "Oops! Something went wrong.";
      }
    }
  </script>
</body>
</html>
